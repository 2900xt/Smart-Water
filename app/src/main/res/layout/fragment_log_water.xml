<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.remindrop.smartwater.ui.home.logwater.LogWaterFragment"
    tools:ignore="HardcodedText"
    >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.643">

        <Button
            android:id="@+id/button_log_water_1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/light_blue"
            android:text="1"
            android:textColor="@color/white"
            android:fontFamily="@font/akaya_telivigala" />

        <Button
            android:id="@+id/button_log_water_2"
            android:layout_margin="4dp"
            android:backgroundTint="@color/light_blue"
            android:text="2"
            android:textColor="@color/white"
            android:fontFamily="@font/akaya_telivigala" />

        <Button
            android:id="@+id/button_log_water_3"
            android:layout_margin="4dp"
            android:backgroundTint="@color/light_blue"
            android:text="3"
            android:textColor="@color/white"
            android:fontFamily="@font/akaya_telivigala" />

        <Button
            android:id="@+id/button_log_water_4"
            android:layout_margin="4dp"
            android:backgroundTint="@color/light_blue"
            android:text="4"
            android:textColor="@color/white"
            android:fontFamily="@font/akaya_telivigala" />

        <Button
            android:id="@+id/button_log_water_5"
            android:layout_margin="4dp"
            android:backgroundTint="@color/light_blue"
            android:text="5"
            android:textColor="@color/white"
            android:fontFamily="@font/akaya_telivigala" />

        <Button
            android:id="@+id/button_log_water_6"
            android:layout_margin="4dp"
            android:backgroundTint="@color/light_blue"
            android:text="6"
            android:textColor="@color/white"
            android:fontFamily="@font/akaya_telivigala" />

        <Button
            android:id="@+id/button_log_water_7"
            android:layout_margin="4dp"
            android:backgroundTint="@color/light_blue"
            android:text="7"
            android:textColor="@color/white"
            android:fontFamily="@font/akaya_telivigala" />

        <Button
            android:id="@+id/button_log_water_8"
            android:layout_margin="4dp"
            android:backgroundTint="@color/light_blue"
            android:text="8"
            android:textColor="@color/white"
            android:fontFamily="@font/akaya_telivigala" />

        <Button
            android:id="@+id/button_log_water_9"
            android:layout_margin="4dp"
            android:backgroundTint="@color/light_blue"
            android:text="9"
            android:textColor="@color/white"
            android:fontFamily="@font/akaya_telivigala" />

        <ImageView android:contentDescription="@null" />

        <Button
            android:id="@+id/button_log_water_0"
            android:layout_margin="4dp"
            android:backgroundTint="@color/light_blue"
            android:text="0"
            android:textColor="@color/white"
            android:fontFamily="@font/akaya_telivigala" />

        <Button
            android:id="@+id/button_log_water_del"
            android:layout_margin="4dp"
            android:backgroundTint="@color/light_blue"
            android:text="del"
            android:textColor="@color/white"
            android:fontFamily="@font/akaya_telivigala" />
    </GridLayout>

    <TextView
        android:id="@+id/text_amount_logged"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/textview_rounded"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/normal_blue"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.35"
        android:fontFamily="@font/akaya_telivigala" />

    <ImageView
        android:id="@+id/image_log_water"
        android:layout_width="372dp"
        android:layout_height="198dp"
        android:src="@drawable/ic_log_extra_water"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/button_add_water"
        android:layout_width="271dp"
        android:layout_height="67dp"
        android:background="@drawable/textview_rounded"
        android:text="Go Back"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.885"
        android:fontFamily="@font/akaya_telivigala" />



</androidx.constraintlayout.widget.ConstraintLayout>